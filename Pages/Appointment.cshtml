@page
@model MejosDental.Pages.AppointmentModel
@{
    ViewData["Title"] = "Appointment";
    ViewData["Styles"] = "appoint.css";
}

<div class="appointment-container">
    <form method="post" class="appointment-form">
        <h1>Book an Appointment</h1>
        <p>Please fill out the form below to request a dental appointment.</p>

        <div class="mb-3">
            <label for="Email">Email</label>
            <input type="email" id="Email" asp-for="Email" required />
        </div>

        <div class="mb-3">
            <label for="Procedure">Procedure</label>
            <input type="text" id="Procedure" asp-for="Procedure" required />
        </div>

        <div class="mb-3">
            <label for="Date">Appointment Date</label>
            <input type="date" id="Date" asp-for="Date" required />
        </div>

        <div class="button">
            <button type="submit">Submit</button>
        </div>

        @if (Model.SuccessMessage != null)
        {
            <div class="alert alert-success alert-floating mt-3">@Model.SuccessMessage</div>
        }

        @if (Model.ErrorMessage != null)
        {
            <div class="alert alert-danger alert-floating mt-3">@Model.ErrorMessage</div>
        }
    </form>
</div>
