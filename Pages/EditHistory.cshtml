@page "{M_ID:int}"
@model MejosDental.Pages.EditHistoryModel
@{
    ViewData["Title"] = "Edit History";
}

<h1>Edit Medical History</h1>
<form method="post">
    <input type="hidden" asp-for="History.M_ID" />
    
    <div class="mb-3">
        <label asp-for="History.M_Date">Date</label>
        <input asp-for="History.M_Date" type="date" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="History.M_description">Description</label>
        <textarea asp-for="History.M_description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="History.M_dentist_name">Dentist Name</label>
        <input asp-for="History.M_dentist_name" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="History.M_diagnosis">Diagnosis</label>
        <input asp-for="History.M_diagnosis" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="History.M_perform">Performed Treatment</label>
        <input asp-for="History.M_perform" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="History.M_result">Result</label>
        <input asp-for="History.M_result" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="History.M_medication">Medication</label>
        <input asp-for="History.M_medication" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="History.M_note">Note</label>
        <input asp-for="History.M_note" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="History.M_amount_paid">Amount Paid</label>
        <input asp-for="History.M_amount_paid" type="number" step="0.01" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Admin" class="btn btn-secondary">Cancel</a>
</form>
